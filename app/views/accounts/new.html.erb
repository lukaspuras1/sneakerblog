<%content_for :page_title, "Registration" %>
<div class="section">
  <%=simple_form_for @account  do |f| %>
    <div class="field">
      <div class="control">

        <%=f.input :username, label:'abc',placeholder:'Username',input_html: { class: 'input'}, wrapper: false, label_html: { class: 'label'} %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%=f.input :password, input_html: { class: 'textarea'}, wrapper: false, label_html: { class: 'label'} %>
      </div>
    </div>
    <%= f.button :submit,  class: "button is-primary" %>
  <% end %>
</div>